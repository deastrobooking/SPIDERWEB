modules = ["rust", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["alsa-lib", "cargo", "fontconfig", "openssl", "pkg-config", "rustc", "rustup", "zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RustSynthBuilder"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildMLFramework"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MLServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MLDemoServer"

[[workflows.workflow]]
name = "RustSynthBuilder"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build"

[[workflows.workflow]]
name = "BuildMLFramework"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build --release"

[[workflows.workflow]]
name = "MLServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run --bin ml_server"
waitForPort = 5000

[[workflows.workflow]]
name = "MLDemoServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 demo_server.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "bash -c \"which cargo && cargo build\""]

[[ports]]
localPort = 5000
externalPort = 80
