modules = ["rust", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["alsa-lib", "cargo", "fontconfig", "openssl", "pkg-config", "rustc", "rustup", "zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RustSynthBuilder"

[[workflows.workflow]]
name = "RustSynthBuilder"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build"

[deployment]
run = ["sh", "-c", "bash -c \"which cargo && cargo build\""]

[[ports]]
localPort = 5000
externalPort = 80
